@model AlkemyChallenge.Models.Pelicula

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h4>Esta segura/o que desea eliminar ?</h4>
<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            Fecha de Estreno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDeCreacion)
        </dd>
        <dt class="col-sm-2">
            Calificacion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calificacion)
        </dd>
        <dt class="col-sm-2">
            Nombre de Imagen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagenNombre)
        </dd>
        <dt class="col-sm-2">
            Imagen:
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Image/"+Model.ImagenNombre)" asp-append-version="true" width="150px" height="150px" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PeliculaID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
