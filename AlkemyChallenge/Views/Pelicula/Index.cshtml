@model IEnumerable<AlkemyChallenge.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                Titulo
            </th>
            <th>
                Fecha de Estreno
            </th>
            <th>
                Calificacion
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeCreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion)
            </td>
            <td>
                <img src="@("~/Image/"+item.ImagenNombre)" asp-append-version="true" width="50px" height="50px" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeliculaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PeliculaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PeliculaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
