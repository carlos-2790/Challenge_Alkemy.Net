            </div>
            <div class="form-group">
                <label asp-for="FechaDeCreacion" class="control-label"></label>
                <input asp-for="FechaDeCreacion" class="form-control" />
                <span asp-validation-for="FechaDeCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenNombre" class="control-label">Nombre de Imagen</label>
                <input asp-for="ImagenNombre" class="form-control" />
                <span asp-validation-for="ImagenNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenFile" class="control-label">Nombre de Imagen</label>
                <input asp-for="ImagenFile"  accept="image/*" />
                <span asp-validation-for="ImagenFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
