@model AlkemyChallenge.Models.Genero

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genero</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Nombre de la Imagen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreImagen)
        </dd>
        <dd class="col-sm-10">
            <img src="@("~/Image/"+Model.NombreImagen)" asp-append-version="true" width="150px" height="150px" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GeneroID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
