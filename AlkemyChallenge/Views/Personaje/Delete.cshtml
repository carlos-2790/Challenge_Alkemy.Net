@model AlkemyChallenge.Models.Personaje

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h4>Esta segura/o que desea eliminar?</h4>
<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            edad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Edad)
        </dd>
        <dt class="col-sm-2">
            Peso(MB)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Peso)
        </dd>
        <dt class="col-sm-2">
            Historia
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Historia)
        </dd>
        <dt class="col-sm-2">
            Nombre de la Imagen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagenNombre)
        </dd>
        <br />
        <dd class="col-sm-10">
            <img src="@("~/Image/"+Model.ImagenNombre)" asp-append-version="true" width="150px" height="150px" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
